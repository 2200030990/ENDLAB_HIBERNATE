<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/klu</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Vyshu@20</property>

        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Select our SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Echo the SQL to stdout -->
        <property name="hibernate.show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Specify our annotated classes -->
        <mapping class="com.klef.jfsd.exam.inheritance_mapping.Vehicle"/>
        <mapping class="com.klef.jfsd.exam.inheritance_mapping.Car"/>
        <mapping class="com.klef.jfsd.exam.inheritance_mapping.Truck"/> <!-- Add this line -->
    </session-factory>
</hibernate-configuration>
